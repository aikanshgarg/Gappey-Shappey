<a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>

<!-- CONTENT INSIDE THE SIDEBAR : CHATROOMS LIST -->
<ul id="slide-out" class="sidenav">
  <li>
    <div class="user-view">
      <div class="background" style="background-color: #ff9800;">
      </div>
      <% if !user_signed_in? %>
        <a href="#user"><img class="circle" src="https://cactusthemes.com/blog/wp-content/uploads/2018/01/tt_avatar_small.jpg"></a>
        <a href="#name"><span class="white-text name">Aikansh Garg</span></a>
        <a href="#email"><span class="white-text email">aikanshgarg0303@gmail.com</span></a>
      <% else %>
        <a href="#user"><img class="circle" src="http://www.ivuzee.co/assets/img/avatars/profiles/avatar-1.png"></a>
        <a href="#name"><span class="white-text name"><%= current_user.username %></span></a>
        <a href="#email"><span class="white-text email"><%= current_user.email %></span></a>
      <% end %>
    </div>
  </li>

  
  <% if user_signed_in? %>
    <li><a class="subheader">Your Chatrooms</a></li>
    <%= render 'shared/sidebar' %>
  <% else %>
    <li><a class="subheader">All Chatrooms</a></li>
  <% end %>
</ul>



