  .gs-logo {
    background: white;
    border-radius: 50%;
    margin-bottom: -9px;
    padding: 5px;
  }

  .sidenav-trigger {
    margin-left: 22px;
    position: absolute;
    margin-top: -41px;
    color: #fff;
  }
</style>

